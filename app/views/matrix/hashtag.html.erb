<div class="col-md-8">
	<h2> Hashtag Associated Words </h2>	
	<div class="graph-container">
		<!-- <svg id="parallel" xmlns='http://www.w3.org/2000/svg' width='100%' height='680px'>
		</svg> -->
	</div>
</div>
<div class="col-md-4">
	<h3> <small>Visualisation Information </small></h3> 
	<br />
	<strong>Current Hashtag</strong>: <%= @hashtag %>
	<br/>
	<strong>Current Timestamp</strong>: <%= @timestamp[:human_readable] %>
	<br/><br/>
	<div class="btn-group">
		<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
		Available Sample Windows <span class="caret"></span>
		</button>

		<ul class="dropdown-menu" role="menu" style="max-height: 300px; overflow-y:auto; width:100%;">
			<% @timestamp_list.reverse.each do |timestamp_sing| %>
				<li>
					<a href="<%= root_url %>matrix/hashtag?timestamp=<%= timestamp_sing[:url]%>">
						<span  <% if @timestamp[:human_readable] == timestamp_sing[:human_readable] %>
								class="text-muted"
							<% end %>>
						<%= timestamp_sing[:human_readable] %>
						</span>
					</a>
				</li>
			<% end %>
		</ul>
	</div>
	<br />
	<br />
	<div class="btn-group">
		<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
		Available Hashtags <span class="caret"></span>
		</button>

		<ul class="dropdown-menu" role="menu" style="max-height: 300px; overflow-y:auto;">
			<% @hashtag_list.sort.each do |hashtag_sing| %>
				<li>
					<a href="<%= root_url %>matrix/hashtag?tag=<%= hashtag_sing%>&timestamp=<%= @timestamp[:url] %>">
						<span  <% if @hashtag == hashtag_sing %>
								class="text-muted"
							<% end %>>
						<%= hashtag_sing %>
						</span>
					</a>
				</li>
			<% end %>
		</ul>
	</div>
	<br/>
	<br/>
	<em>Hover over a bubble to see stats below</em>
	<div class="row">
		<div class="col-md-8">
			<table class="table table-condensed" id="info-table">
				<tr>
					<th></th>
					<th>Value</th>
				</tr>
				<tr>	
					<td>Word</td>
					<td id="info-word"></td>
				</tr>
				<tr>	
					<td>Activation</td>
					<td id="info-activ"></td>
				</tr>
				<tr>	
					<td>Pleasantness</td>
					<td id="info-pleas"></td>
				</tr>
				<tr>	
					<td>Imagery</td>
					<td id="info-image"></td>
				</tr>
				<tr>	
					<td>Frequency</td>
					<td id="info-freq"></td>
				</tr>

			</table>

	

			<table class='table table-condensed key'>
				<tr>
					<th>Key</td>
					<td></td>
				</tr>
				<tr>
					<td class="key-name">DAL</td>
					<td class='key-color' id="type-1-key">&nbsp;</td>
				</tr>
				<tr>
					<td class="key-name">Adjective</td>
					<td class='key-color' id="type-2-key">&nbsp;</td>
				</tr>
				<tr>
					<td class="key-name">Verb</td>
					<td class='key-color' id="type-3-key">&nbsp;</td>
				</tr>
				<tr>
					<td class="key-name">Noun</td>
					<td class='key-color' id="type-4-key">&nbsp;</td>
				</tr>
				<tr>
					<td class="key-name">Category</td>
					<td class='key-color' id="type-5-key">&nbsp;</td>
				</tr>
			</table>
		</div>

	</div>
</div>

</div>

